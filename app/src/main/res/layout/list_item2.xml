<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv_2"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_itemview1"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/li_title2"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li_title2"
        android:text="@string/icon_ex"
        android:textColor="#bcbcbc"
        android:id="@+id/li_iconEx"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/li_kn"
        android:layout_below="@id/li_title2"
        android:layout_toRightOf="@id/li_iconEx"
        android:text="Kinh nghiem:"
        android:textColor="#4a4a4a"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/li_year"
        android:layout_below="@id/li_title2"
        android:layout_toRightOf="@id/li_kn"
        android:textColor="#ec2400"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>